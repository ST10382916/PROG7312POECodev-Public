@model MunicipalServicesMVP.Models.IssueReport
@{
    ViewData["Title"] = ViewBag.Title ?? "Report an Issue";
    var categories = ViewBag.Categories as MunicipalServicesMVP.Models.IssueCategory[] ?? new MunicipalServicesMVP.Models.IssueCategory[0];
}

<div class="container">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center mb-3">
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary me-3">
                    <i class="fas fa-arrow-left me-2"></i>Back to Main Menu
                </a>
                <div>
                    <h2 class="text-primary mb-1">
                        <i class="fas fa-exclamation-triangle me-2"></i>Report an Issue
                    </h2>
                    <p class="text-muted mb-0">@ViewBag.Instructions</p>
                </div>
            </div>
            
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
        </div>
    </div>

    <!-- Report Form -->
    <form asp-action="SubmitIssue" method="post" enctype="multipart/form-data" id="reportForm">
        @Html.AntiForgeryToken()
        
        <div class="row">
            <!-- Main Form Column -->
            <div class="col-lg-8">
                
                <!-- Location Section -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-map-marker-alt me-2"></i>Location Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Location.Address" class="form-label">
                                    <i class="fas fa-road me-1"></i>Street Address *
                                </label>
                                <input asp-for="Location.Address" class="form-control" 
                                       placeholder="e.g., 123 Main Street, Corner of Smith & Jones Road" 
                                       required />
                                <span asp-validation-for="Location.Address" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Location.Area" class="form-label">
                                    <i class="fas fa-home me-1"></i>Suburb/Area
                                </label>
                                <input asp-for="Location.Area" class="form-control" 
                                       placeholder="e.g., Sandton, Rosebank" />
                                <span asp-validation-for="Location.Area" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Location.City" class="form-label">
                                    <i class="fas fa-city me-1"></i>City
                                </label>
                                <input asp-for="Location.City" class="form-control" 
                                       placeholder="e.g., Johannesburg, Cape Town" />
                                <span asp-validation-for="Location.City" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Location.PostalCode" class="form-label">
                                    <i class="fas fa-mail-bulk me-1"></i>Postal Code
                                </label>
                                <input asp-for="Location.PostalCode" class="form-control" 
                                       placeholder="e.g., 2196, 8001" />
                                <span asp-validation-for="Location.PostalCode" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Issue Details Section -->
                <div class="card mb-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="fas fa-info-circle me-2"></i>Issue Details
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CategoryId" class="form-label">
                                    <i class="fas fa-tags me-1"></i>Issue Category *
                                </label>
                                <select asp-for="CategoryId" class="form-select" required>
                                    <option value="">-- Select Category --</option>
                                    @foreach (var category in categories)
                                    {
                                        <option value="@category.CategoryId">@category.Name - @category.Description</option>
                                    }
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Priority" class="form-label">
                                    <i class="fas fa-flag me-1"></i>Priority Level
                                </label>
                                <select asp-for="Priority" class="form-select">
                                    <option value="1">Low - Can wait for regular maintenance</option>
                                    <option value="2" selected>Medium - Needs attention soon</option>
                                    <option value="3">High - Urgent, affects safety/health</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-edit me-1"></i>Description *
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="5" 
                                      placeholder="Please provide a detailed description of the issue. Include what you observed, when it occurred, and any relevant details that might help us resolve it quickly."
                                      required></textarea>
                            <div class="form-text">
                                <i class="fas fa-lightbulb me-1"></i>
                                Tip: Be specific! Include details like size, severity, and how long the issue has existed.
                            </div>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Contact Information Section -->
                <div class="card mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-user me-2"></i>Your Contact Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="ReporterName" class="form-label">
                                    <i class="fas fa-user me-1"></i>Full Name *
                                </label>
                                <input asp-for="ReporterName" class="form-control" 
                                       placeholder="Your full name" required />
                                <span asp-validation-for="ReporterName" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="ReporterEmail" class="form-label">
                                    <i class="fas fa-envelope me-1"></i>Email Address
                                </label>
                                <input asp-for="ReporterEmail" type="email" class="form-control" 
                                       placeholder="your.email@example.com" />
                                <span asp-validation-for="ReporterEmail" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="ReporterPhone" class="form-label">
                                    <i class="fas fa-phone me-1"></i>Phone Number
                                </label>
                                <input asp-for="ReporterPhone" type="tel" class="form-control" 
                                       placeholder="083 123 4567" />
                                <span asp-validation-for="ReporterPhone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="alert alert-light">
                            <i class="fas fa-shield-alt me-2"></i>
                            <strong>Privacy Note:</strong> Your contact information will only be used to provide updates on this issue and will not be shared with third parties.
                        </div>
                    </div>
                </div>

                <!-- File Attachments Section -->
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-paperclip me-2"></i>Attachments (Optional)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="attachments" class="form-label">
                                <i class="fas fa-upload me-1"></i>Upload Photos or Documents
                            </label>
                            <input type="file" name="attachments" id="attachments" class="form-control" 
                                   multiple accept="image/*,.pdf,.doc,.docx,.txt" />
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Supported formats: Images (JPG, PNG, GIF), Documents (PDF, DOC, DOCX, TXT). Max 5MB per file.
                            </div>
                        </div>
                        
                        <!-- File Preview Area -->
                        <div id="filePreview" class="row" style="display: none;">
                            <div class="col-12">
                                <h6>Selected Files:</h6>
                                <div id="fileList"></div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Engagement Feature -->
                <div class="card mb-4 bg-light">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-heart me-2"></i>Community Engagement
                        </h5>
                    </div>
                    <div class="card-body text-center">
                        <div id="engagementMessage" class="mb-3">
                            <p class="text-muted">Loading engagement stats...</p>
                        </div>
                        <div class="progress mb-3">
                            <div id="engagementProgress" class="progress-bar bg-success" role="progressbar" 
                                 style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                            </div>
                        </div>
                        <small class="text-muted">Community participation level</small>
                    </div>
                </div>

                <!-- Quick Tips -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-lightbulb me-2"></i>Quick Tips
                        </h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                Be as specific as possible with your location
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                Include photos if available
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                Describe the impact on the community
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                Provide your contact details for updates
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Emergency Notice -->
                <div class="alert alert-warning">
                    <h6><i class="fas fa-exclamation-triangle me-2"></i>Emergency?</h6>
                    <p class="mb-2">For urgent emergencies, please call:</p>
                    <strong>Emergency Services: 10111</strong><br>
                    <strong>Municipal Emergency: 0860 543 000</strong>
                </div>
            </div>
        </div>

        <!-- Submit Section -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center">
                        <button type="submit" class="btn btn-primary btn-lg me-3" id="submitBtn">
                            <i class="fas fa-paper-plane me-2"></i>Submit Report
                        </button>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                        
                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="fas fa-clock me-1"></i>
                                You will receive a reference number after submission for tracking your request.
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Load engagement statistics
            loadEngagementStats();
            
            // File upload preview
            $('#attachments').on('change', function() {
                previewFiles(this.files);
            });
            
            // Form validation enhancement
            $('#reportForm').on('submit', function(e) {
                var isValid = true;
                
                // Custom validation
                if ($('#Description').val().length < 10) {
                    alert('Please provide a more detailed description (at least 10 characters).');
                    isValid = false;
                }
                
                if (!isValid) {
                    e.preventDefault();
                    return false;
                }
                
                // Show loading state
                $('#submitBtn').prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Submitting...');
            });
        });
        
        function loadEngagementStats() {
            $.get('@Url.Action("GetEngagementStats", "Issue")')
                .done(function(data) {
                    if (data.error) {
                        $('#engagementMessage').html('<p class="text-muted">Unable to load stats</p>');
                    } else {
                        $('#engagementMessage').html('<p class="text-primary"><strong>' + data.message + '</strong></p>');
                        $('#engagementProgress').css('width', data.progressPercentage + '%')
                                              .attr('aria-valuenow', data.progressPercentage)
                                              .text(data.totalReports + ' reports submitted');
                    }
                })
                .fail(function() {
                    $('#engagementMessage').html('<p class="text-muted">Community engagement data unavailable</p>');
                });
        }
        
        function previewFiles(files) {
            var fileList = $('#fileList');
            var filePreview = $('#filePreview');
            
            if (files.length > 0) {
                fileList.empty();
                filePreview.show();
                
                Array.from(files).forEach(function(file, index) {
                    var fileSize = (file.size / 1024 / 1024).toFixed(2);
                    var fileIcon = getFileIcon(file.type);
                    
                    var fileItem = $('<div class="alert alert-light d-flex align-items-center mb-2">' +
                                   '<i class="' + fileIcon + ' me-2"></i>' +
                                   '<div class="flex-grow-1">' +
                                   '<strong>' + file.name + '</strong><br>' +
                                   '<small class="text-muted">' + fileSize + ' MB</small>' +
                                   '</div>' +
                                   '</div>');
                    
                    fileList.append(fileItem);
                });
            } else {
                filePreview.hide();
            }
        }
        
        function getFileIcon(fileType) {
            if (fileType.startsWith('image/')) return 'fas fa-image text-success';
            if (fileType.includes('pdf')) return 'fas fa-file-pdf text-danger';
            if (fileType.includes('doc')) return 'fas fa-file-word text-primary';
            return 'fas fa-file text-secondary';
        }
    </script>
}

@section Styles {
    <style>
        .card-header {
            font-weight: 600;
        }
        
        .form-label {
            font-weight: 500;
        }
        
        .btn-lg {
            padding: 12px 30px;
        }
        
        .alert-light {
            border-left: 4px solid #007bff;
        }
        
        .progress {
            height: 8px;
        }
        
        .list-unstyled li {
            padding: 2px 0;
        }
        
        #filePreview .alert {
            padding: 10px;
            margin-bottom: 8px;
        }
    </style>
}
