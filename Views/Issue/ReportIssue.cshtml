@model MunicipalServicesMVP.Models.IssueReport
@{
    ViewData["Title"] = ViewBag.Title ?? "Report an Issue";
    var categories = ViewBag.Categories as MunicipalServicesMVP.Models.IssueCategory[] ?? new MunicipalServicesMVP.Models.IssueCategory[0];
}

<div class="container">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center mb-3">
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary me-3">
                    Back to Main Menu
                </a>
                <div>
                    <h2 class="text-primary mb-1">
                        Report an Issue
                    </h2>
                    <p class="text-muted mb-0">@ViewBag.Instructions</p>
                </div>
            </div>
            
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @ViewBag.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
        </div>
    </div>

    <!-- Report Form -->
    <form asp-action="SubmitIssue" method="post" enctype="multipart/form-data" id="reportForm">
        @Html.AntiForgeryToken()
        
        <div class="row">
            <!-- Main Form Column -->
            <div class="col-lg-8">
                
                <!-- Location Section -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            Location Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Location.Address" class="form-label">
                                    Street Address *
                                </label>
                                <input asp-for="Location.Address" class="form-control" 
                                       placeholder="e.g., 123 Main Street, Corner of Smith & Jones Road" 
                                       required />
                                <span asp-validation-for="Location.Address" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Location.Area" class="form-label">
                                    Suburb/Area
                                </label>
                                <input asp-for="Location.Area" class="form-control" 
                                       placeholder="e.g., Sandton, Rosebank" />
                                <span asp-validation-for="Location.Area" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Location.City" class="form-label">
                                    City
                                </label>
                                <input asp-for="Location.City" class="form-control" 
                                       placeholder="e.g., Johannesburg, Cape Town" />
                                <span asp-validation-for="Location.City" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Location.PostalCode" class="form-label">
                                    Postal Code
                                </label>
                                <input asp-for="Location.PostalCode" class="form-control" 
                                       placeholder="e.g., 2196, 8001" />
                                <span asp-validation-for="Location.PostalCode" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Issue Details Section -->
                <div class="card mb-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            Issue Details
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CategoryId" class="form-label">
                                    Issue Category *
                                </label>
                                <select asp-for="CategoryId" class="form-select" required>
                                    <option value="">-- Select Category --</option>
                                    @foreach (var category in categories)
                                    {
                                        <option value="@category.CategoryId">@category.Name - @category.Description</option>
                                    }
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Priority" class="form-label">
                                    Priority Level
                                </label>
                                <select asp-for="Priority" class="form-select">
                                    <option value="1">Low - Can wait for regular maintenance</option>
                                    <option value="2" selected>Medium - Needs attention soon</option>
                                    <option value="3">High - Urgent, affects safety/health</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                Description *
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="5" 
                                      placeholder="Please provide a detailed description of the issue. Include what you observed, when it occurred, and any relevant details that might help us resolve it quickly."
                                      required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>


                <!-- File Attachments Section -->
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            Attachments (Optional)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="attachments" class="form-label">
                                Upload Photos or Documents
                            </label>
                            <input type="file" name="attachments" id="attachments" class="form-control" 
                                   multiple accept="image/*,.pdf,.doc,.docx,.txt" />
                            <div class="form-text">
                                Supported formats: Images (JPG, PNG, GIF), Documents (PDF, DOC, DOCX, TXT). Max 5MB per file.
                            </div>
                        </div>
                        
                        <!-- File Preview Area -->
                        <div id="filePreview" class="row" style="display: none;">
                            <div class="col-12">
                                <h6>Selected Files:</h6>
                                <div id="fileList"></div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Progress Bar -->
                <div class="card mb-4 bg-light">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            Progress Bar
                        </h5>
                    </div>
                    <div class="card-body text-center">
                        <div id="engagementMessage" class="mb-3">
                            <p class="text-muted">Start filling out the form!</p>
                        </div>
                        <div class="progress mb-3">
                            <div id="engagementProgress" class="progress-bar bg-success" role="progressbar" 
                                 style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Tips -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            Quick Tips
                        </h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                1. Be as specific as possible with your location
                            </li>
                            <li class="mb-2">
                                2. Include photos if available
                            </li>
                            <li class="mb-2">
                                3. Describe the impact on the community
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>

        <!-- Submit Section -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center">
                        <button type="submit" class="btn btn-primary btn-lg me-3" id="submitBtn">
                            Submit Report
                        </button>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-lg">
                            Cancel
                        </a>
                        
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Load engagement statistics
            loadEngagementStats();
            
            // File upload preview
            $('#attachments').on('change', function() {
                previewFiles(this.files);
                updateProgressBar();
            });
            
            // Update progress bar when form fields change
            $('#reportForm input, #reportForm select, #reportForm textarea').on('input change', function() {
                updateProgressBar();
            });
            
            // Form validation enhancement
            $('#reportForm').on('submit', function(e) {
                var isValid = true;
                
                // Custom validation
                if ($('#Description').val().length < 10) {
                    alert('Please provide a more detailed description (at least 10 characters).');
                    isValid = false;
                }
                
                if (!isValid) {
                    e.preventDefault();
                    return false;
                }
                
                // Show loading state
                $('#submitBtn').prop('disabled', true).html('Submitting...');
            });
            
            // Initial progress bar update
            updateProgressBar();
        });
        
        function loadEngagementStats() {
            $.get('@Url.Action("GetEngagementStats", "Issue")')
                .done(function(data) {
                    if (data.error) {
                        $('#engagementMessage').html('<p class="text-muted">Unable to load stats</p>');
                    } else {
                        $('#engagementMessage').html('<p class="text-primary"><strong>' + data.message + '</strong></p>');
                        $('#engagementProgress').css('width', data.progressPercentage + '%')
                                              .attr('aria-valuenow', data.progressPercentage);
                    }
                })
                .fail(function() {
                    $('#engagementMessage').html('<p class="text-muted">Community engagement data unavailable</p>');
                });
        }
        
        function previewFiles(files) {
            var fileList = $('#fileList');
            var filePreview = $('#filePreview');
            
            if (files.length > 0) {
                fileList.empty();
                filePreview.show();
                
                Array.from(files).forEach(function(file, index) {
                    var fileSize = (file.size / 1024 / 1024).toFixed(2);
                    var fileIcon = getFileIcon(file.type);
                    
                    var fileItem = $('<div class="alert alert-light d-flex align-items-center mb-2">' +
                                   '<div class="flex-grow-1">' +
                                   '<strong>' + file.name + '</strong><br>' +
                                   '<small class="text-muted">' + fileSize + ' MB</small>' +
                                   '</div>' +
                                   '</div>');
                    
                    fileList.append(fileItem);
                });
            } else {
                filePreview.hide();
            }
        }
        
        function getFileIcon(fileType) {
            if (fileType.startsWith('image/')) return 'fas fa-image text-success';
            if (fileType.includes('pdf')) return 'fas fa-file-pdf text-danger';
            if (fileType.includes('doc')) return 'fas fa-file-word text-primary';
            return 'fas fa-file text-secondary';
        }
        
        function updateProgressBar() {
            var totalFields = 0;
            var filledFields = 0;
            
            // Required fields
            var requiredFields = [
                '#Location_Address',
                '#CategoryId', 
                '#Description'
            ];
            
            // Optional fields
            var optionalFields = [
                '#Location_Area',
                '#Location_City',
                '#Location_PostalCode',
                '#Priority'
            ];
            
            // Check required fields (weight them more heavily)
            requiredFields.forEach(function(fieldId) {
                totalFields += 2; // Required fields count double
                var value = $(fieldId).val();
                if (value && value.trim() !== '') {
                    filledFields += 2;
                }
            });
            
            // Check optional fields
            optionalFields.forEach(function(fieldId) {
                totalFields += 1;
                var value = $(fieldId).val();
                if (value && value.trim() !== '') {
                    filledFields += 1;
                }
            });
            
            // Check if files are attached (bonus points)
            var attachments = $('#attachments')[0];
            if (attachments && attachments.files.length > 0) {
                filledFields += 1;
            }
            totalFields += 1;
            
            // Calculate percentage
            var percentage = totalFields > 0 ? Math.round((filledFields / totalFields) * 100) : 0;
            
            // Update progress bar
            $('#engagementProgress').css('width', percentage + '%')
                                  .attr('aria-valuenow', percentage);
            
            // Update message based on progress
            var message = '';
            if (percentage === 0) {
                message = 'Start filling out the form!';
            } else if (percentage < 50) {
                message = 'Getting started... (' + percentage + '% complete)';
            } else if (percentage < 80) {
                message = 'Making good progress! (' + percentage + '% complete)';
            } else if (percentage < 100) {
                message = 'Almost done! (' + percentage + '% complete)';
            } else {
                message = 'Form complete! Ready to submit (' + percentage + '% complete)';
            }
            
            $('#engagementMessage').html('<p class="text-primary"><strong>' + message + '</strong></p>');
        }
    </script>
}

@section Styles {
    <style>
        .card-header {
            font-weight: 600;
        }
        
        .form-label {
            font-weight: 500;
        }
        
        .btn-lg {
            padding: 12px 30px;
        }
        
        .alert-light {
            border-left: 4px solid #007bff;
        }
        
        .progress {
            height: 8px;
        }
        
        .list-unstyled li {
            padding: 2px 0;
        }
        
        #filePreview .alert {
            padding: 10px;
            margin-bottom: 8px;
        }
    </style>
}
